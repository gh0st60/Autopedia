@model IEnumerable<Autopedia.Models.FormulaTeam>
    @{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
    pager = ViewBag.Pager;
    pageNo = pager.CurrentPage;
    }
    }
    <style>
        .avatar {
            vertical-align: middle;
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }
    </style>
    <h1>Formula 1 Teams</I></h1>
    <p>
        <a asp-action="Create" class=" btn btn-sm btn-success ml-1">Create New</a>
    </p>
    <partial name="_pager" model="@pager" />
    <table class="table">
        <thead>
            <tr>
                <th>@Html.Label("Logo")</th>
                <th>
                    @Html.Label("Team")
                </th>
                <th>
                    @Html.Label("Description")
                    @*@Html.DisplayNameFor(model => model.Description)*@
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="@item.PhotoUrl" alt="" class="avatar">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary ml-1">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ml-1">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

